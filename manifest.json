{
  "manifest_version": 1,
  "name": "YomiSaver",
  "version": "1.0",
  "description": "A tool to make learning Japanese easier with furigana, flashcard saving, and Anki export.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
